package com.example.demo.control;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import com.example.demo.model.HandPhone;

import jakarta.annotation.Resource;

@Controller
public class BasicController {
	
	@Resource
	HandPhone handPhone;	

	@RequestMapping("/calc")
	ModelAndView calccccc() {
		ModelAndView mav = new ModelAndView();
		mav.setViewName("ccaa");
		mav.addObject("hp", handPhone);
		return mav;
	}
	
	@RequestMapping(value="/shark", method = RequestMethod.GET)
	String sharkForm() {
		return "basic/sharkForm";
	}
	
	@RequestMapping(value="/shark", method = RequestMethod.POST)
	String sharkComplete() {
		return "basic/sharkComplete";
	}
}
