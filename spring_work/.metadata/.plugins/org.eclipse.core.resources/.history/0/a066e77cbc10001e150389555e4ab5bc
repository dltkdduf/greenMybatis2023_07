package com.example.demo.control;

import java.io.FileOutputStream;
import java.util.List;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.web.multipart.MultipartHttpServletRequest;

import com.example.demo.model.FileData;

import jakarta.servlet.http.HttpServletRequest;

@Controller
public class FileController {

	@RequestMapping("/file/uploadForm")
	String fileForm() {
		return "file/uploadForm";
	}
	
	@RequestMapping("/file/upload_1")
	String upload_1(String pname, int age, MultipartFile ff1,MultipartFile ff2, 
			HttpServletRequest request, Model mm) {
		System.out.println("upload_1:"+pname+","+age);
		System.out.println("ff1:"+ff1.getOriginalFilename());
		System.out.println("ff2:"+ff2.getOriginalFilename());
		System.out.println(ff1.getName());
		System.out.println(ff1.getContentType());
		System.out.println(ff1.getSize());
		System.out.println(ff1.isEmpty());
		
		mm.addAttribute("aa", pname);
		mm.addAttribute("age", age);
		mm.addAttribute("zx1", ff1.getOriginalFilename());
		mm.addAttribute("zx2", ff2.getOriginalFilename());
		
		fileSave(ff1, request);
		
		return "file/uploadComplete";
	}
	
	@RequestMapping("/file/upload_2")
	String upload_2(MultipartHttpServletRequest mr, Model mm) {
		System.out.println("upload_2:"+mr.getParameter("pname")+","+mr.getParameter("age"));
		MultipartFile ff1 = mr.getFile("ff1");
		MultipartFile ff2 = mr.getFile("ff2");
		System.out.println("ff1:"+ff1.getOriginalFilename());
		System.out.println("ff2:"+ff2.getOriginalFilename());
		System.out.println(ff1.getName());
		System.out.println(ff1.getContentType());
		System.out.println(ff1.getSize());
		System.out.println(ff1.isEmpty());
		
		mm.addAttribute("aa", mr.getParameter("pname"));
		mm.addAttribute("age", mr.getParameter("age"));
		mm.addAttribute("zx1", ff1.getOriginalFilename());
		mm.addAttribute("zx2", ff2.getOriginalFilename());
		
		fileSave(ff1, mr);
		
		return "file/uploadComplete";
	}
	
	
	@RequestMapping("/file/upload_3")
	String upload_3(HttpServletRequest request, FileData fd) {
		System.out.println("upload_3:"+fd);
		
		System.out.println("ff1:"+fd.getFf1().getOriginalFilename());
		System.out.println("ff2:"+fd.getFf1().getOriginalFilename());
		System.out.println(fd.getFf1().getName());
		System.out.println(fd.getFf1().getContentType());
		System.out.println(fd.getFf1().getSize());
		System.out.println(fd.getFf1().isEmpty());
		
		
		
		fileSave(fd.getFf1(), request);
		
		return "file/uploadComplete3";
	}
	
	
	@RequestMapping("/file/upload_mul")
	String upload_mul(HttpServletRequest request, FileData fd, MultipartHttpServletRequest mulRR) {
		System.out.println("upload_3:"+fd);
		
		System.out.println("ff1:"+fd.getFf1().getOriginalFilename());
		System.out.println("ff2:"+fd.getFf1().getOriginalFilename());
		System.out.println(fd.getFf1().getName());
		System.out.println(fd.getFf1().getContentType());
		System.out.println(fd.getFf1().getSize());
		System.out.println(fd.getFf1().isEmpty());
		
		List<MultipartFile> fList = mulRR.getFiles("ffmul");
		System.out.println("----------------");
		for (MultipartFile mf : fList) {
			System.out.println(mf.getOriginalFilename());
		}
		System.out.println("----------------");
		fileSave(fd.getFf1(), request);
		
		return "file/uploadComplete3";
	}
	
	
	void fileSave(MultipartFile ff,	HttpServletRequest request) {
		String path = request.getServletContext().getRealPath("qwer");
		//System.out.println(path);
		try {
			FileOutputStream fos = new FileOutputStream(path+"\\"+ff.getOriginalFilename());
			fos.write(ff.getBytes());
			fos.close();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}
	
}


/*


3번째 방식을 이용하여 회원 가입을 진행하세요
회원 정보 :


ID, 이름, 나이, 전화번호, 사진(이미지파일만), 이력서(문서파일만)
 

파일 이름 중복시 자동으로 이름변경하세요 

* */
